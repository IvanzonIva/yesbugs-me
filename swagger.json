  "components": {
    "schemas": {
      "User": {
        "required": [
          "password",
          "username"
        ],
        "type": "object",
        "properties": {
          "username": {
            "maxLength": 15,
            "minLength": 3,
            "pattern": "^[\\w\\.\\-]+$",
            "type": "string",
            "example": "kate1998"
          },
          "password": {
            "maxLength": 2147483647,
            "minLength": 8,
            "pattern": "^(?=.*[0-9])(?=.*[a-z])(?=.*[A-Z])(?=.*[!@#$%^&+=])(?=\\S+$).{8,}$",
            "type": "string",
            "example": "verysTRongPassword33$"
          }
        }
      },
      "Customer": {
        "required": [
          "password",
          "username"
        ],
        "type": "object",
        "properties": {
          "username": {
            "maxLength": 15,
            "minLength": 3,
            "pattern": "^[\\w\\.\\-]+$",
            "type": "string",
            "example": "kate1998"
          },
          "password": {
            "pattern": "^(?=\\S+$)(?=.*[0-9])(?=.*[a-z])(?=.*[A-Z])(?=.*[!@#$%^&+=]).{8,}$",
            "type": "string",
            "example": "verysTRongPassword33$"
          },
          "role": {
            "pattern": "ADMIN|USER",
            "type": "string",
            "example": "USER"
          }
        }
      },
      "Account": {
        "type": "object"
      }
    },
    "securitySchemes": {
      "basicAuth": {
        "type": "http",
        "scheme": "basic"
      }
    }
  }
